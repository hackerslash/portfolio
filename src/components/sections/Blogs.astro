---
import Section from "../Section.astro"
import { getBlogs } from "@blogs"
import { formatDate } from "@/utils/formatDate"
import Tag from "@/components/Tag.astro"

const blogs = getBlogs()
---

<Section title="Blogs" id="blogs">
  {blogs.length === 0 ? (
    <div class="no-blogs">
      <p>No Blogs</p>
    </div>
  ) : (
    <ul>
      {
        blogs.map(({ id, title, date, excerpt, author, tags }) => {
          const formattedDate = formatDate(date)

          return (
            <li>
              <article>
                <div class="article-content">
                  <div class="text-content">
                    <header>
                      <h3>
                        <a href={`/blog/${id}`} title={`Read ${title}`}>
                          {title}
                        </a>
                      </h3>
                      <time datetime={date}>{formattedDate}</time>
                      <p class="author">By {author}</p>
                    </header>
                    <div>
                      <p>{excerpt}</p>
                    </div>
                    {tags && tags.length > 0 && (
                      <div class="tags">
                        {tags.map((tag: string) => <Tag tag={tag} />)}
                      </div>
                    )}
                  </div>
                  <div class="image-container">
                    <img src="https://picsum.photos/200" alt={title} loading="lazy" />
                  </div>
                </div>
                <a href={`/blog/${id}`} class="read-more-overlay">Read More â†’</a>
              </article>
            </li>
          )
        })
      }
    </ul>
  )}
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article {
    position: relative;
    border-radius: 12px;
    border: 1px solid var(--card-border);
    background: var(--card-bg);
    padding: 24px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(8px);
  }

  article:hover {
    border-color: var(--accent-color);
    background: rgba(255, 255, 255, 0.05);
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(1, 155, 89, 0.12);
  }

  .read-more-overlay {
    position: absolute;
    bottom: 16px;
    right: 24px;
    padding: 8px 16px;
    border-radius: 8px;
    background-color: transparent;
    border: 1px solid var(--accent-color);
    color: var(--accent-color);
    font-size: 0.9rem;
    font-weight: 500;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
    text-decoration: none;
  }

  article:hover .read-more-overlay {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .read-more-overlay:hover {
    background-color: var(--accent-color);
    color: #fff;
    transform: translateY(0) scale(1.05);
  }

  .article-content {
    display: flex;
    gap: 20px;
    align-items: flex-start;
    padding-bottom: 56px;
  }

  .text-content {
    flex: 1;
  }

  .image-container {
    flex-shrink: 0;
    align-self: stretch;
    display: flex;
    flex-direction: column;
  }

  .image-container img {
    width: 200px;
    height: 100%;
    min-height: 200px;
    object-fit: cover;
    border-radius: 8px;
    border: 1px solid var(--card-border);
  }

  header {
    margin-bottom: 12px;
  }

  h3 {
    margin-bottom: 8px;
  }

  h3 a {
    color: #fff;
    font-size: 1.4rem;
  }

  h3 a:hover {
    color: var(--accent-color);
    text-decoration: none;
  }

  time {
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .author {
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-top: 4px;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    margin-top: 16px;
  }

  .no-blogs {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 48px;
    border-radius: 12px;
    border: 1px solid var(--card-border);
    background-color: var(--card-bg);
    backdrop-filter: blur(8px);
  }

  .no-blogs p {
    font-size: 1rem;
    color: var(--text-muted);
  }

  @media (width <= 700px) {
    .article-content {
      flex-direction: column;
      padding-bottom: 0;
    }

    .image-container {
      align-self: auto;
    }

    .image-container img {
      width: 100%;
      height: auto;
      min-height: auto;
      aspect-ratio: 16 / 9;
    }

    .read-more-overlay {
      position: static;
      display: inline-block;
      margin-top: 16px;
    }
  }
</style>
