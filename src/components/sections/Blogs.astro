---
import Section from "../Section.astro"
import { getBlogs } from "@blogs"
import { formatDate } from "@/utils/formatDate"
import Tag from "@/components/Tag.astro"

const blogs = getBlogs()
const BLOGS_PER_PAGE = 2
---

<Section title="Blogs" id="blogs">
  {blogs.length === 0 ? (
    <div class="no-blogs">
      <p>No Blogs</p>
    </div>
  ) : (
    <div>
      <ul class="blogs-container">
        {
          blogs.map(({ id, title, date, excerpt, author, tags }, index) => {
            const formattedDate = formatDate(date)

            return (
              <li data-blog-index={index} class={index < BLOGS_PER_PAGE ? "blog-visible" : "blog-hidden"}>
                <article>
                  <div class="article-content">
                    <div class="text-content">
                      <header>
                        <h3>
                          <a href={`/blog/${id}`} title={`Read ${title}`}>
                            {title}
                          </a>
                        </h3>
                        <time datetime={date}>{formattedDate}</time>
                        <p class="author">By {author}</p>
                      </header>
                      <div>
                        <p>{excerpt}</p>
                      </div>
                      {tags && tags.length > 0 && (
                        <div class="tags">
                          {tags.map((tag: string) => <Tag tag={tag} />)}
                        </div>
                      )}
                    </div>
                    <div class="image-container">
                      <img src="https://picsum.photos/200" alt={title} loading="lazy" />
                    </div>
                  </div>
                  <a href={`/blog/${id}`} class="read-more-overlay">Read More →</a>
                </article>
              </li>
            )
          })
        }
      </ul>
      {blogs.length > BLOGS_PER_PAGE && (
        <div class="pagination">
          <button class="pagination-btn" id="prev-btn" disabled>← Previous</button>
          <span class="pagination-info">
            <span id="current-page">1</span> / <span id="total-pages">{Math.ceil(blogs.length / BLOGS_PER_PAGE)}</span>
          </span>
          <button class="pagination-btn" id="next-btn">Next →</button>
        </div>
      )}
    </div>
  )}
</Section>

<style>
  ul.blogs-container {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .blog-hidden {
    display: none;
  }

  .blog-visible {
    display: block;
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 48px;
  }

  .pagination-btn {
    padding: 10px 20px;
    border-radius: 8px;
    background-color: transparent;
    border: 1px solid var(--accent-color);
    color: var(--accent-color);
    font-family: inherit;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .pagination-btn:hover:not(:disabled) {
    background-color: var(--accent-color);
    color: #fff;
    transform: translateY(-2px);
  }

  .pagination-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .pagination-info {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  article {
    position: relative;
    border-radius: 12px;
    border: 1px solid var(--card-border);
    background: var(--card-bg);
    padding: 24px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(8px);
  }

  article:hover {
    border-color: var(--accent-color);
    background: rgba(255, 255, 255, 0.05);
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(1, 155, 89, 0.12);
  }

  .read-more-overlay {
    position: absolute;
    bottom: 16px;
    right: 24px;
    padding: 8px 16px;
    border-radius: 8px;
    background-color: transparent;
    border: 1px solid var(--accent-color);
    color: var(--accent-color);
    font-family: inherit;
    font-size: 0.9rem;
    font-weight: 500;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
    text-decoration: none;
  }

  article:hover .read-more-overlay {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .read-more-overlay:hover {
    background-color: var(--accent-color);
    color: #fff;
    transform: translateY(0) scale(1.05);
  }

  .article-content {
    display: flex;
    gap: 20px;
    align-items: flex-start;
    padding-bottom: 56px;
  }

  .text-content {
    flex: 1;
  }

  .image-container {
    flex-shrink: 0;
    align-self: stretch;
    display: flex;
    flex-direction: column;
  }

  .image-container img {
    width: 200px;
    height: 100%;
    min-height: 200px;
    object-fit: cover;
    border-radius: 8px;
    border: 1px solid var(--card-border);
  }

  header {
    margin-bottom: 12px;
  }

  h3 {
    margin-bottom: 8px;
  }

  h3 a {
    color: #fff;
    font-size: 1.4rem;
  }

  h3 a:hover {
    color: var(--accent-color);
    text-decoration: none;
  }

  time {
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .author {
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-top: 4px;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    margin-top: 16px;
  }

  .no-blogs {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 48px;
    border-radius: 12px;
    border: 1px solid var(--card-border);
    background-color: var(--card-bg);
    backdrop-filter: blur(8px);
  }

  .no-blogs p {
    font-size: 1rem;
    color: var(--text-muted);
  }

  @media (width <= 700px) {
    .article-content {
      flex-direction: column;
      padding-bottom: 0;
    }

    .image-container {
      align-self: auto;
    }

    .image-container img {
      width: 100%;
      height: auto;
      min-height: auto;
      aspect-ratio: 16 / 9;
    }

    .read-more-overlay {
      position: static;
      display: inline-block;
      margin-top: 16px;
    }
  }
</style>

<script>
  const BLOGS_PER_PAGE = 2;
  let currentPage = 1;

  const blogItems = document.querySelectorAll('[data-blog-index]');
  const totalPages = Math.ceil(blogItems.length / BLOGS_PER_PAGE);
  
  const prevBtn = document.getElementById('prev-btn') as HTMLButtonElement;
  const nextBtn = document.getElementById('next-btn') as HTMLButtonElement;
  const currentPageSpan = document.getElementById('current-page');

  function showPage(page: number, shouldScroll = false) {
    blogItems.forEach((item, index) => {
      const startIndex = (page - 1) * BLOGS_PER_PAGE;
      const endIndex = startIndex + BLOGS_PER_PAGE;
      
      if (index >= startIndex && index < endIndex) {
        item.classList.remove('blog-hidden');
        item.classList.add('blog-visible');
      } else {
        item.classList.remove('blog-visible');
        item.classList.add('blog-hidden');
      }
    });

    if (currentPageSpan) {
      currentPageSpan.textContent = page.toString();
    }

    if (prevBtn) {
      prevBtn.disabled = page === 1;
    }

    if (nextBtn) {
      nextBtn.disabled = page === totalPages;
    }

    // Only scroll when explicitly requested (on pagination button clicks)
    if (shouldScroll) {
      const blogsSection = document.getElementById('blogs');
      if (blogsSection) {
        blogsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    }
  }

  if (prevBtn) {
    prevBtn.addEventListener('click', () => {
      if (currentPage > 1) {
        currentPage--;
        showPage(currentPage, true);
      }
    });
  }

  if (nextBtn) {
    nextBtn.addEventListener('click', () => {
      if (currentPage < totalPages) {
        currentPage++;
        showPage(currentPage, true);
      }
    });
  }

  // Initialize - don't scroll on page load
  showPage(currentPage, false);
</script>
