---
import GitHub from "@/icons/GitHub.astro"
import Section from "../Section.astro"

import { projects } from "@cv"
---

<Section title="Projects">
  <ul>
    {
      projects.map(
        ({ url, description, highlights, name, isActive, github }) => {
          return (
            <li>
              <article>
                <header>
                  <h3>
                    <a href={url} target="_blank" title={`Ver el proyecto ${name}`}>
                      {name}
                    </a>
                    {isActive && <span>•</span>}
                    {github && (
                      <a
                        class="github-code-link"
                        href={github}
                        target="_blank"
                        title={`Ver código fuente del proyecto ${name}`}
                      >
                        <GitHub />
                      </a>
                    )}
                  </h3>
                  <p>{description}</p>
                </header>
                <footer>
                  {highlights.map((highlight) => {
                    return <span>{highlight}</span>
                  })}
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-inline: -16px;
  }

  article {
    border-radius: 12px;
    border: 1px solid var(--card-border);
    background: var(--card-bg);
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 20px;
    height: 100%;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(8px);
  }

  article:hover {
    border-color: var(--accent-color);
    transform: translateY(-6px);
    background: rgba(255, 255, 255, 0.05);
    box-shadow: 0 12px 32px rgba(1, 155, 89, 0.15);
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 8px;
  }

  article a {
    color: #fff;
  }

  article a:hover {
    color: var(--accent-color);
    text-decoration: none;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.4;
    margin-bottom: 4px;
    color: var(--text-muted);
  }

  article h3 span {
    color: #22c55e;
    animation-name: flicker;
    animation-duration: 2s;
    animation-timing-function: ease-in-out;
    animation-iteration-count: infinite;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 4px;
    background: rgba(1, 155, 89, 0.1);
    border: 1px solid rgba(1, 155, 89, 0.2);
    color: var(--accent-color);
    font-size: 0.65rem;
    font-weight: 500;
    padding: 2px 8px;
  }

  .github-code-link {
    margin-left: 5px;
    color: var(--text-muted) !important;
  }

  .github-code-link:hover {
    color: #fff !important;
  }

  @keyframes flicker {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0.25;
    }
    100% {
      opacity: 1;
    }
  }

  @media (width <= 700px) {
    ul {
      margin-inline: 0px;
    }

    article {
      border: none;
      box-shadow: 0 1px 1px #f2f2f2;
      padding: 0 0 16px 0;
    }
  }

  @media print {
    article h3 span {
      animation-name: none;
    }
  }
</style>
