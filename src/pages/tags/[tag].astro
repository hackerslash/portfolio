---
import Layout from "@/layouts/Layout.astro"
import { getBlogs } from "@blogs"
import { formatDate } from "@/utils/formatDate"
import Home from "@/icons/Home.astro"
import Tag from "@/components/Tag.astro"
import { BLOG_POSTS_PER_PAGE_TAG } from "@/utils/constants"

export async function getStaticPaths() {
  const blogs = getBlogs()
  
  const allTags = new Set<string>()
  blogs.forEach(blog => {
    if (blog.tags && Array.isArray(blog.tags)) {
      blog.tags.forEach((tag: string) => allTags.add(tag))
    }
  })
  
  return Array.from(allTags).map(tag => ({
    params: { tag },
    props: { 
      tag,
      blogs: blogs.filter(blog => 
        blog.tags && blog.tags.includes(tag)
      )
    },
  }))
}

const { tag, blogs } = Astro.props
const BLOGS_PER_PAGE = BLOG_POSTS_PER_PAGE_TAG
---

<Layout title={`Posts tagged with "${tag}" | Md Afridi Sk`}>
  <main>
    <nav class="blog-nav">
      <a href="/#blogs" class="home-link" title="Back to Blogs">
        <Home />
        <span>Back to Blogs</span>
      </a>
    </nav>

    <header class="tag-header">
      <h1>Posts tagged with <span class="tag-name">#{tag}</span></h1>
      <p class="blog-count">{blogs.length} {blogs.length === 1 ? 'post' : 'posts'} found</p>
    </header>

    <section class="blogs-list">
      {blogs.length === 0 ? (
        <div class="no-blogs">
          <p>No blogs found with this tag.</p>
        </div>
      ) : (
        <div>
          <ul class="blogs-container">
            {blogs.map(({ id, title, date, excerpt, author, tags, readingTime }, index) => {
              const formattedDate = formatDate(date)

              return (
                <li data-blog-index={index} class={index < BLOGS_PER_PAGE ? "blog-visible" : "blog-hidden"}>
                  <article>
                    <div class="article-content">
                      <div class="text-content">
                        <header>
                          <h3>
                            <a href={`/blog/${id}`} title={`Read ${title}`}>
                              {title}
                            </a>
                          </h3>
                          <div class="meta-row">
                            <time datetime={date}>{formattedDate}</time>
                            <span class="reading-time" aria-label={`Reading time: ${readingTime}`}>
                              üìñ {readingTime}
                            </span>
                          </div>
                          <p class="author">By {author}</p>
                        </header>
                        <div>
                          <p>{excerpt}</p>
                        </div>
                        {tags && tags.length > 0 && (
                          <div class="tags">
                            {tags.map((t: string) => <Tag tag={t} />)}
                          </div>
                        )}
                      </div>
                      <div class="image-container">
                        <img src="https://picsum.photos/200" alt={title} loading="lazy" />
                      </div>
                    </div>
                    <a href={`/blog/${id}`} class="read-more-overlay">Read More ‚Üí</a>
                  </article>
                </li>
              )
            })}
          </ul>
          {blogs.length > BLOGS_PER_PAGE && (
            <div class="pagination">
              <button class="pagination-btn" id="prev-btn" disabled>‚Üê Previous</button>
              <span class="pagination-info">
                <span id="current-page">1</span> / <span id="total-pages">{Math.ceil(blogs.length / BLOGS_PER_PAGE)}</span>
              </span>
              <button class="pagination-btn" id="next-btn">Next ‚Üí</button>
            </div>
          )}
        </div>
      )}
    </section>
  </main>
</Layout>

<style>
  main {
    padding: 4rem;
    margin: auto;
    width: 100%;
    max-width: 800px;
  }

  .blog-nav {
    margin-bottom: 2rem;
  }

  .home-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-color);
    font-size: 0.95rem;
    font-weight: 500;
    padding: 8px 16px;
    border-radius: 8px;
    background-color: var(--card-bg);
    border: 1px solid var(--card-border);
    transition: all 0.3s ease;
  }

  .home-link:hover {
    background-color: var(--accent-color);
    border-color: var(--accent-color);
    color: #fff;
  }

  .tag-header {
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-color);
  }

  .tag-name {
    color: var(--accent-color);
    font-weight: 700;
  }

  .blog-count {
    color: var(--text-muted);
    font-size: 1rem;
  }

  .blogs-list ul.blogs-container {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .blog-hidden {
    display: none;
  }

  .blog-visible {
    display: block;
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 48px;
  }

  .pagination-btn {
    padding: 10px 20px;
    border-radius: 8px;
    background-color: transparent;
    border: 1px solid var(--accent-color);
    color: var(--accent-color);
    font-family: inherit;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .pagination-btn:hover:not(:disabled) {
    background-color: var(--accent-color);
    color: #fff;
    transform: translateY(-2px);
  }

  .pagination-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .pagination-info {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  article {
    position: relative;
    border-radius: 12px;
    border: 1px solid var(--card-border);
    background: var(--card-bg);
    padding: 24px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(8px);
  }

  article:hover {
    border-color: var(--accent-color);
    background: rgba(255, 255, 255, 0.05);
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(1, 155, 89, 0.12);
  }

  .read-more-overlay {
    position: absolute;
    bottom: 16px;
    right: 24px;
    padding: 8px 16px;
    border-radius: 8px;
    background-color: transparent;
    border: 1px solid var(--accent-color);
    color: var(--accent-color);
    font-size: 0.9rem;
    font-weight: 500;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
    text-decoration: none;
  }

  article:hover .read-more-overlay {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .read-more-overlay:hover {
    background-color: var(--accent-color);
    color: #fff;
    transform: translateY(0) scale(1.05);
  }

  .article-content {
    display: flex;
    gap: 20px;
    align-items: flex-start;
    padding-bottom: 56px;
  }

  .text-content {
    flex: 1;
  }

  .image-container {
    flex-shrink: 0;
    align-self: stretch;
    display: flex;
    flex-direction: column;
  }

  .image-container img {
    width: 200px;
    height: 100%;
    min-height: 200px;
    object-fit: cover;
    border-radius: 8px;
    border: 1px solid var(--card-border);
  }

  header {
    margin-bottom: 12px;
  }

  h3 {
    margin-bottom: 8px;
  }

  h3 a {
    color: #fff;
    font-size: 1.4rem;
  }

  h3 a:hover {
    color: var(--accent-color);
    text-decoration: none;
  }

  time {
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .meta-row {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .reading-time {
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .reading-time::before {
    content: '‚Ä¢';
    margin-right: 8px;
    color: var(--accent-color);
  }

  .author {
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-top: 4px;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    margin-top: 16px;
  }

  .no-blogs {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 48px;
    border-radius: 12px;
    border: 1px solid var(--card-border);
    background-color: var(--card-bg);
    backdrop-filter: blur(8px);
  }

  .no-blogs p {
    font-size: 1rem;
    color: var(--text-muted);
  }

  @media (width <= 700px) {
    main {
      padding: 2rem 1rem;
    }

    h1 {
      font-size: 1.8rem;
    }

    .article-content {
      flex-direction: column;
      padding-bottom: 0;
    }

    .image-container {
      align-self: auto;
    }

    .image-container img {
      width: 100%;
      height: auto;
      min-height: auto;
      aspect-ratio: 16 / 9;
    }

    .read-more-overlay {
      position: static;
      display: inline-block;
      margin-top: 16px;
    }
  }
</style>

<script>
  const backToBlogsLinks = document.querySelectorAll('.home-link');
  
  backToBlogsLinks.forEach(link => {
    link.addEventListener('click', function(event) {
      event.preventDefault();
      window.location.href = '/#blogs';
    });
  });

  // Pagination logic
  const BLOGS_PER_PAGE = 3;
  let currentPage = 1;

  const blogItems = document.querySelectorAll('[data-blog-index]');
  const totalPages = Math.ceil(blogItems.length / BLOGS_PER_PAGE);
  
  const prevBtn = document.getElementById('prev-btn') as HTMLButtonElement;
  const nextBtn = document.getElementById('next-btn') as HTMLButtonElement;
  const currentPageSpan = document.getElementById('current-page');

  function showPage(page: number) {
    blogItems.forEach((item, index) => {
      const startIndex = (page - 1) * BLOGS_PER_PAGE;
      const endIndex = startIndex + BLOGS_PER_PAGE;
      
      if (index >= startIndex && index < endIndex) {
        item.classList.remove('blog-hidden');
        item.classList.add('blog-visible');
      } else {
        item.classList.remove('blog-visible');
        item.classList.add('blog-hidden');
      }
    });

    if (currentPageSpan) {
      currentPageSpan.textContent = page.toString();
    }

    if (prevBtn) {
      prevBtn.disabled = page === 1;
    }

    if (nextBtn) {
      nextBtn.disabled = page === totalPages;
    }

    // Smooth scroll to top of page
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }

  if (prevBtn) {
    prevBtn.addEventListener('click', () => {
      if (currentPage > 1) {
        currentPage--;
        showPage(currentPage);
      }
    });
  }

  if (nextBtn) {
    nextBtn.addEventListener('click', () => {
      if (currentPage < totalPages) {
        currentPage++;
        showPage(currentPage);
      }
    });
  }

  // Initialize
  showPage(currentPage);
</script>
