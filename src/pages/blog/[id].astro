---
import Layout from "@/layouts/Layout.astro"
import { getBlogs } from "@blogs"
import { formatDate } from "@/utils/formatDate"
import MarkdownIt from 'markdown-it'
import { createHighlighter } from 'shiki'
import Home from "@/icons/Home.astro"
import Comments from "@/components/sections/Comments.astro"
import Tag from "@/components/Tag.astro"
import { basics } from "@cv"

export async function getStaticPaths() {
  const blogs = getBlogs()
  return blogs.map(blog => ({
    params: { id: blog.id },
    props: { blog },
  }))
}

const { blog } = Astro.props
const { title, date, author, content, tags, readingTime, excerpt } = blog
const formattedDate = formatDate(date)

// SEO props
const siteUrl = basics.url
const canonicalUrl = `${siteUrl}/blog/${blog.id}`
const pageTitle = `${title} - Blog | Md Afridi Sk`

// JSON-LD structured data for BlogPosting
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": excerpt,
  "author": {
    "@type": "Person",
    "name": author,
    "url": siteUrl
  },
  "datePublished": date,
  "dateModified": date,
  "publisher": {
    "@type": "Person",
    "name": "Md Afridi Sk",
    "url": siteUrl
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalUrl
  },
  "url": canonicalUrl,
  "keywords": tags?.join(", ") || ""
}

const highlighter = await createHighlighter({
  themes: ['github-dark', 'solarized-light'],
  langs: ['javascript', 'typescript', 'css', 'html', 'bash', 'json', 'python', 'markdown']
})

const md = new MarkdownIt({
  html: true,
  linkify: true,
  typographer: true,
  highlight: (code, lang) => {
    const darkHtml = highlighter.codeToHtml(code, {
      lang: lang || 'text',
      theme: 'github-dark'
    })
    const lightHtml = highlighter.codeToHtml(code, {
      lang: lang || 'text',
      theme: 'solarized-light'
    })
    
    // Return both themes without outer wrapper - markdown-it won't add pre wrapper
    return `<div class="code-block-dark">${darkHtml}</div><div class="code-block-light">${lightHtml}</div>`
  }
})

// Custom renderer to prevent markdown-it from wrapping highlighted code in <pre>
md.renderer.rules.fence = (tokens, idx) => {
  const token = tokens[idx]
  const code = token.content
  const lang = token.info || 'text'
  
  const darkHtml = highlighter.codeToHtml(code, {
    lang: lang,
    theme: 'github-dark'
  })
  const lightHtml = highlighter.codeToHtml(code, {
    lang: lang,
    theme: 'solarized-light'
  })
  
  return `<div class="code-block-wrapper"><button class="copy-button" aria-label="Copy code"><svg class="copy-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg><svg class="check-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg></button><div class="code-block-dark">${darkHtml}</div><div class="code-block-light">${lightHtml}</div></div>`
}

const renderedContent = md.render(content)
---

<Layout 
  title={pageTitle}
  description={excerpt}
  canonicalUrl={canonicalUrl}
  ogType="article"
>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <main>
    <nav class="blog-nav">
      <a href="/#blogs" class="home-link" title="Back to Blogs">
        <Home />
        <span>Back to Blogs</span>
      </a>
    </nav>
    <article class="blog-post">
      <header>
        <h1>{title}</h1>
        <div class="meta">
          <time datetime={date}>{formattedDate}</time>
          <span class="reading-time">{readingTime}</span>
          <span class="author">By {author}</span>
        </div>
        {tags && tags.length > 0 && (
          <div class="tags">
            {tags.map((tag: string) => <Tag tag={tag} />)}
          </div>
        )}
      </header>
      <div class="content">
        <div set:html={renderedContent} />
      </div>
      <footer>
        <a href="/#blogs" class="back-button blog-footer-link">← Back to Blogs</a>
      </footer>
    </article>

    <Comments />
  </main>
</Layout>

<style>
  main {
    padding: 4rem;
    margin: auto;
    width: 100%;
    max-width: 800px;
    overflow-x: hidden; /* Prevent horizontal scrolling */
    box-sizing: border-box; /* Include padding in width calculation */
  }

  .blog-nav {
    margin-bottom: 2rem;
  }

  .home-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-color);
    font-size: 0.95rem;
    font-weight: 500;
    padding: 8px 16px;
    border-radius: 8px;
    background-color: var(--card-bg);
    border: 1px solid var(--card-border);
    transition: all 0.3s ease;
  }

  .home-link:hover {
    background-color: var(--accent-color);
    border-color: var(--accent-color);
    color: #fff;
  }

  .blog-post {
    width: 100%;
    margin-bottom: 2rem;
    overflow-x: hidden;
  }

  header {
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: linear-gradient(to right, #fff, #a3a3a3);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  :global(.light) h1 {
    background: linear-gradient(to right, #0f172a, #475569);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .meta {
    display: flex;
    gap: 1.5rem;
    color: var(--text-muted);
    font-size: 0.95rem;
  }

  .reading-time {
    color: var(--text-muted);
  }

  .reading-time::before {
    content: '•';
    margin-right: 1.5rem;
    color: var(--accent-color);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    margin-top: 16px;
  }

  .content {
    line-height: 1.8;
    color: var(--text-color);
    overflow-wrap: break-word;
    word-wrap: break-word;
    overflow-x: hidden;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
  }

  .content > div {
    width: 100%;
    display: block;
    max-width: 100%;
    box-sizing: border-box;
    overflow: visible;
  }

  .content :global(img) {
    max-width: 100% !important;
    height: auto !important;
    display: block !important;
    margin: 2.5rem auto !important;
    border-radius: 7px !important;
    object-fit: contain !important;
    border: 1px solid var(--card-border) !important;
    box-shadow: none !important;
    transition: transform 0.3s ease !important;
  }

  .content :global(img:hover) {
    transform: scale(1.02) !important;
  }

  .content h1, .content h2, .content h3 {
    color: #fff;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .content p {
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
    color: var(--text-color);
  }

  .content pre {
    background-color: transparent;
    backdrop-filter: none;
    padding: 0;
    border-radius: 0;
    border: none;
    overflow: visible;
    margin: 5px 0 !important;
    box-shadow: none;
    line-height: 0;
    font-size: 0;
    display: block;
  }

  .content :global(pre.shiki) {
    padding: 1.5rem 2rem !important;
    border-radius: 7px !important;
    margin: 0 !important;
    box-shadow: none !important;
    line-height: 1.5 !important;
    font-size: 0.9rem !important;
    display: block !important;
  }

  /* Don't override shiki's inline background-color styles */
  .content :global(.code-block-dark pre.shiki),
  .content :global(.code-block-light pre.shiki) {
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  :global(.light) .content :global(.code-block-light pre.shiki) {
    border: 1px solid rgba(0, 0, 0, 0.15);
  }

  .content :global(pre) {
    margin: 0 !important;
    padding: 0 !important;
  }

  /* Theme switching for code blocks */
  .content :global(.code-block-wrapper) {
    position: relative;
    margin: 5px 0;
  }

  .content :global(.copy-button) {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    padding: 0.5rem;
    background-color: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 4px;
    color: var(--text-color);
    cursor: pointer;
    opacity: 0;
    transition: opacity 0.2s ease, background-color 0.2s ease;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .content :global(.copy-button .check-icon) {
    display: none;
  }

  .content :global(.copy-button.copied .copy-icon) {
    display: none;
  }

  .content :global(.copy-button.copied .check-icon) {
    display: block;
  }

  .content :global(.code-block-wrapper:hover .copy-button) {
    opacity: 1;
  }

  .content :global(.copy-button:hover) {
    background-color: rgba(255, 255, 255, 0.2);
  }

  .content :global(.copy-button:active) {
    background-color: rgba(1, 155, 89, 0.3);
  }

  .content :global(.copy-button.copied) {
    background-color: rgba(1, 155, 89, 0.3);
    border-color: rgba(1, 155, 89, 0.5);
  }

  .content :global(.code-block-light),
  .content :global(.code-block-dark) {
    margin: 0;
  }

  .content :global(.code-block-light) {
    display: none;
  }

  .content :global(.code-block-dark) {
    display: block;
  }

  :global(.light) .content :global(.code-block-light) {
    display: block;
  }

  :global(.light) .content :global(.code-block-dark) {
    display: none;
  }

  .content code {
    font-family: Menlo, Monaco, monospace;
    background-color: rgba(1, 155, 89, 0.15);
    padding: 0.2rem 0.5rem;
    border-radius: 6px;
    font-size: 0.9rem;
    color: #4ade80;
    border: 1px solid rgba(1, 155, 89, 0.2);
  }

  .content pre code {
    background-color: transparent !important;
    padding: 0 !important;
    text-shadow: none !important;
    border: none !important;
  }

  .content table th,
  .content table td {
    border: 1px solid var(--card-border);
    padding: 12px 16px;
    text-align: left;
  }

  .content table th {
    background-color: rgba(255, 255, 255, 0.05);
    font-weight: 600;
  }

  .content blockquote {
    border-left: 4px solid var(--accent-color);
    background: rgba(1, 155, 89, 0.05);
    padding: 1rem 1.5rem;
    margin: 2rem 0;
    border-radius: 0 12px 12px 0;
    font-style: italic;
    color: var(--text-muted);
  }

  footer {
    margin-top: 4rem;
    border-top: 1px solid var(--card-border);
    padding-top: 2rem;
  }

  .back-button {
    display: inline-block;
    color: var(--text-color);
    font-size: 1rem;
    font-weight: 500;
    padding: 10px 20px;
    border-radius: 8px;
    background-color: var(--card-bg);
    border: 1px solid var(--card-border);
    transition: all 0.3s ease;
  }

  .back-button:hover {
    background-color: var(--accent-color);
    border-color: var(--accent-color);
    color: #fff;
  }

  @media (width <= 700px) {
    main {
      padding: 2rem 1rem; /* Reduced horizontal padding for more content space */
    }

    h1 {
      font-size: 2rem;
    }

    .content {
      width: 100%;
      overflow-x: hidden;
    }

    .content img {
      margin: 1rem auto; /* Slightly reduced margins on mobile */
    }

    .content pre,
    .content :global(pre.shiki) {
      padding: 1rem 1.5rem !important;
    }

    .blog-nav {
      margin-bottom: 1.5rem;
    }

    .home-link {
      font-size: 0.9rem;
      padding: 6px 12px;
    }
  }
</style>

<script>
  // Get all "Back to Blogs" links
  const backToBlogsLinks = document.querySelectorAll('.home-link, .blog-footer-link');

  // Add click event listener to each link
  backToBlogsLinks.forEach(link => {
    link.addEventListener('click', function(event) {
      event.preventDefault(); // Prevent default navigation

      // Navigate to the homepage with blogs section
      window.location.href = '/#blogs';
    });
  });

  // Copy button functionality
  const copyButtons = document.querySelectorAll('.copy-button');
  
  copyButtons.forEach(button => {
    button.addEventListener('click', async () => {
      const wrapper = button.parentElement;
      if (!wrapper) return;
      
      const codeBlock = wrapper.querySelector('pre code');
      
      if (codeBlock) {
        const code = codeBlock.textContent || '';
        
        try {
          await navigator.clipboard.writeText(code);
          button.classList.add('copied');
          
          setTimeout(() => {
            button.classList.remove('copied');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy code:', err);
        }
      }
    });
  });
</script>


