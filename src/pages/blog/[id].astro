---
import Layout from "@/layouts/Layout.astro"
import { getBlogs } from "@blogs"
import { formatDate } from "@/utils/formatDate"
import MarkdownIt from 'markdown-it'
import { createHighlighter } from 'shiki'
import Home from "@/icons/Home.astro"
import Comments from "@/components/sections/Comments.astro"
import Tag from "@/components/Tag.astro"
import { basics } from "@cv"
import { generateTOC, addHeadingIds } from "@/utils/generateTOC"

export async function getStaticPaths() {
  const blogs = getBlogs()
  return blogs.map((blog, index) => {
    const prevPost = index < blogs.length - 1 ? blogs[index + 1] : null
    const nextPost = index > 0 ? blogs[index - 1] : null

    return {
      params: { id: blog.id },
      props: { blog, prevPost, nextPost },
    }
  })
}

const { blog, prevPost, nextPost } = Astro.props
const { title, date, author, content, tags, readingTime, excerpt } = blog
const formattedDate = formatDate(date)

// Generate table of contents
const toc = generateTOC(content)
const showTOC = toc.length >= 3 // Only show TOC if there are 3+ headings

// SEO props
const siteUrl = basics.url
const canonicalUrl = `${siteUrl}/blog/${blog.id}`
const pageTitle = `${title} - Blog | Md Afridi Sk`

// JSON-LD structured data for BlogPosting
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": excerpt,
  "author": {
    "@type": "Person",
    "name": author,
    "url": siteUrl
  },
  "datePublished": date,
  "dateModified": date,
  "publisher": {
    "@type": "Person",
    "name": "Md Afridi Sk",
    "url": siteUrl
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalUrl
  },
  "url": canonicalUrl,
  "keywords": tags?.join(", ") || ""
}

const highlighter = await createHighlighter({
  themes: ['github-dark', 'solarized-light'],
  langs: ['javascript', 'typescript', 'css', 'html', 'bash', 'json', 'python', 'markdown']
})

const md = new MarkdownIt({
  html: true,
  linkify: true,
  typographer: true,
  highlight: (code, lang) => {
    const darkHtml = highlighter.codeToHtml(code, {
      lang: lang || 'text',
      theme: 'github-dark'
    })
    const lightHtml = highlighter.codeToHtml(code, {
      lang: lang || 'text',
      theme: 'solarized-light'
    })
    
    // Return both themes without outer wrapper - markdown-it won't add pre wrapper
    return `<div class="code-block-dark">${darkHtml}</div><div class="code-block-light">${lightHtml}</div>`
  }
})

// Custom renderer to prevent markdown-it from wrapping highlighted code in <pre>
md.renderer.rules.fence = (tokens, idx) => {
  const token = tokens[idx]
  const code = token.content
  const lang = token.info || 'text'
  
  const darkHtml = highlighter.codeToHtml(code, {
    lang: lang,
    theme: 'github-dark'
  })
  const lightHtml = highlighter.codeToHtml(code, {
    lang: lang,
    theme: 'solarized-light'
  })
  
  return `<div class="code-block-wrapper"><button class="copy-button" aria-label="Copy code"><svg class="copy-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg><svg class="check-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg></button><div class="code-block-dark">${darkHtml}</div><div class="code-block-light">${lightHtml}</div></div>`
}

let renderedContent = md.render(content)
renderedContent = addHeadingIds(renderedContent)
---

<Layout 
  title={pageTitle}
  description={excerpt}
  canonicalUrl={canonicalUrl}
  ogType="article"
>
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <main>
    <nav class="blog-nav">
      <a href="/#blogs" class="home-link" title="Back to Blogs">
        <Home />
        <span>Back to Blogs</span>
      </a>
    </nav>

    {showTOC && (
      <aside class="toc-sidebar" aria-label="Table of contents">
        <div class="toc-sidebar-content">
          <h2 class="toc-title">On this page</h2>
          <ul class="toc-list">
            {toc.map((item) => (
              <li class="toc-item">
                <a href={`#${item.id}`}>{item.text}</a>
              </li>
            ))}
          </ul>
        </div>
      </aside>
    )}

    <article class="blog-post">
      <header>
        <h1>{title}</h1>
        <div class="meta">
          <time datetime={date}>{formattedDate}</time>
          <span class="reading-time" aria-label={`Reading time: ${readingTime}`}>
            üìñ {readingTime}
          </span>
          <span class="author">By {author}</span>
        </div>
        {tags && tags.length > 0 && (
          <div class="tags">
            {tags.map((tag: string) => <Tag tag={tag} />)}
          </div>
        )}
      </header>
      {showTOC && (
        <nav class="table-of-contents-mobile" aria-label="Table of contents">
          <h2 class="toc-title">On this page</h2>
          <ul class="toc-list">
            {toc.map((item) => (
              <li class="toc-item">
                <a href={`#${item.id}`}>{item.text}</a>
              </li>
            ))}
          </ul>
        </nav>
      )}
      <div class="content">
        <div set:html={renderedContent} />
      </div>
      <footer>
        <nav class="post-navigation" aria-label="Post navigation">
          <div class="nav-links">
            {prevPost ? (
              <a href={`/blog/${prevPost.id}`} class="nav-link prev-link" rel="prev">
                <span class="nav-label">‚Üê Previous</span>
                <span class="nav-title">{prevPost.title}</span>
              </a>
            ) : (
              <div></div>
            )}
            {nextPost ? (
              <a href={`/blog/${nextPost.id}`} class="nav-link next-link" rel="next">
                <span class="nav-label">Next ‚Üí</span>
                <span class="nav-title">{nextPost.title}</span>
              </a>
            ) : (
              <div></div>
            )}
          </div>
        </nav>
        <a href="/#blogs" class="back-button blog-footer-link">‚Üê Back to Blogs</a>
      </footer>
    </article>

    <Comments />
  </main>
</Layout>

