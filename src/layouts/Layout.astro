---
import { basics } from "@cv"

interface Props {
  title: string
  description?: string
  canonicalUrl?: string
  ogImage?: string
  ogType?: string
}

const { title, description, canonicalUrl, ogImage, ogType } = Astro.props

const { image, summary, url } = basics

// Use props or fall back to defaults from cv.json
const metaDescription = description || summary
const pageCanonicalUrl = canonicalUrl || new URL(Astro.url.pathname, url).href
const pageOgImage = ogImage || `${url}/profile-pic.png`
const pageOgType = ogType || 'website'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={metaDescription} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href={image} />
    <link rel="canonical" href={pageCanonicalUrl} />

    <meta property="og:url" content={pageCanonicalUrl} />
    <meta property="og:type" content={pageOgType} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:image" content={pageOgImage} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={url.split("//")[1] ?? ''} />
    <meta property="twitter:url" content={pageCanonicalUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={pageOgImage} />
  </head>
  <body>
    <div id="theme-reveal" class="no-print"></div>
    <slot />
    <script is:inline>
      // Initialize theme from localStorage
      const root = document.documentElement;
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme === 'light') {
        root.classList.add('light');
      }

      // Prevent auto-scroll on page load
      if ('scrollRestoration' in history) {
        history.scrollRestoration = 'manual';
      }
      window.scrollTo(0, 0);
    </script>
    <script data-goatcounter="https://hackerslash.goatcounter.com/count"
            async src="//gc.zgo.at/count.js"></script>
  </body>
</html>

<style is:global>
  /* Ensure content is above any background effects but maintains transparency */
  main, section, article, nav, footer {
    position: relative;
    z-index: 10;
  }
  :root {
    --bg-color: #050505;
    --text-color: #e5e5e5;
    --text-muted: #a3a3a3;
    --accent-color: #019b59;
    --card-bg: rgba(255, 255, 255, 0.03);
    --card-border: rgba(255, 255, 255, 0.08);
    --glass-bg: rgba(10, 10, 10, 0.6);
    --glass-border: rgba(255, 255, 255, 0.1);
  }

  :root.light {
    --bg-color: #EEE8D5;
    --text-color: #0f172a;
    --text-muted: #475569;
    --accent-color: #059669;
    --card-bg: rgba(0, 0, 0, 0.02);
    --card-border: rgba(0, 0, 0, 0.08);
    --glass-bg: rgba(255, 255, 255, 0.7);
    --glass-border: rgba(0, 0, 0, 0.1);
  }

  :root.light h1, :root.light h2, :root.light h3, :root.light h4, :root.light h3 a {
    color: #0f172a !important;
  }

  :root.light body {
    background-image: none;
  }

  #theme-reveal {
    display: none;
  }

  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation: none;
    mix-blend-mode: normal;
  }

  ::view-transition-old(root) {
    z-index: 1;
  }

  ::view-transition-new(root) {
    z-index: 9999;
    clip-path: circle(0% at var(--reveal-x, 50%) var(--reveal-y, 50%));
    animation: reveal-out 1.2s cubic-bezier(0.65, 0, 0.35, 1) forwards;
  }

  @keyframes reveal-out {
    from { clip-path: circle(0% at var(--reveal-x, 50%) var(--reveal-y, 50%)); }
    to { clip-path: circle(150% at var(--reveal-x, 50%) var(--reveal-y, 50%)); }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
    background: var(--bg-color);
    color: var(--text-color);
    letter-spacing: -0.025rem;
    scrollbar-gutter: stable;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    background-image: none;
    background-attachment: scroll;
    background-color: var(--bg-color);
    animation: subtleGlow 8s ease-in-out infinite;
  }

  @keyframes subtleGlow {
    0%, 100% {
      background-position: 0% 0%;
    }
    50% {
      background-position: 10% 5%;
    }
  }

  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
    color: inherit;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    color: #fff;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    color: var(--text-muted);
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
    text-wrap: pretty;
  }

  .print {
    display: none !important;
  }

  @media print {
    .no-print {
      display: none !important;
    }

    .print {
      display: block !important;
    }

    astro-dev-toolbar {
      display: none !important;
    }

    article {
      break-inside: avoid;
    }
  }

  /* Mobile landscape optimizations */
  @media (max-height: 500px) and (orientation: landscape) {
    body {
      font-size: 14px;
    }

    h1 {
      font-size: 1.5rem !important;
    }

    h2 {
      font-size: 1.2rem !important;
    }

    section {
      padding: 1rem 0 !important;
    }
  }
</style>
