---
import { basics } from "@cv"

interface Props {
  title: string
}

const { title } = Astro.props

const { image, summary, url } = basics
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={summary} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href={image} />

    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={summary} />
    <meta property="og:image" content="" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={url.split("//")[1] ?? ''} />
    <meta property="twitter:url" content={url} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={summary} />
    <meta name="twitter:image" content="" />
  </head>
  <body>
    <div id="mouse-haze" class="no-print"></div>
    <slot />
    <script>
      const haze = document.getElementById('mouse-haze');
      let x = -600, y = -600;
      let targetX = -600, targetY = -600;

      document.addEventListener('mousemove', (e) => {
        targetX = e.clientX;
        targetY = e.clientY;
      });

      function animate() {
        x += (targetX - x) * 0.05;
        y += (targetY - y) * 0.05;
        
        if (haze) {
          haze.style.transform = `translate3d(${x}px, ${y}px, 0)`;
        }
        requestAnimationFrame(animate);
      }
      animate();
    </script>
  </body>
</html>

<style is:global>
  #mouse-haze {
    position: fixed;
    top: 0;
    left: 0;
    width: 800px;
    height: 800px;
    background: radial-gradient(
      circle at center,
      rgba(1, 155, 89, 0.35) 0%,
      rgba(1, 155, 89, 0.15) 30%,
      rgba(1, 155, 89, 0.05) 50%,
      transparent 80%
    );
    pointer-events: none;
    z-index: 1;
    mix-blend-mode: screen;
    filter: blur(80px);
    border-radius: 50%;
    will-change: transform;
    opacity: 0.7;
    margin-top: -400px;
    margin-left: -400px;
    animation: pulse 12s ease-in-out infinite alternate;
  }

  @keyframes pulse {
    0% { border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%; }
    100% { border-radius: 70% 30% 50% 50% / 30% 30% 70% 70%; }
  }

  /* Ensure content is above the haze but maintains transparency */
  main, section, article, nav, footer {
    position: relative;
    z-index: 10;
  }
  :root {
    --bg-color: #050505;
    --text-color: #e5e5e5;
    --text-muted: #a3a3a3;
    --accent-color: #019b59;
    --card-bg: rgba(255, 255, 255, 0.03);
    --card-border: rgba(255, 255, 255, 0.08);
    --glass-bg: rgba(10, 10, 10, 0.6);
    --glass-border: rgba(255, 255, 255, 0.1);
  }

  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
    background: var(--bg-color);
    color: var(--text-color);
    letter-spacing: -0.025rem;
    scrollbar-gutter: stable;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    background-image: 
      radial-gradient(circle at 50% 0%, rgba(1, 155, 89, 0.2), transparent 70%),
      radial-gradient(circle at 100% 0%, rgba(1, 155, 89, 0.1), transparent 50%),
      radial-gradient(circle at 0% 0%, rgba(1, 155, 89, 0.05), transparent 40%);
    background-attachment: fixed;
    background-color: var(--bg-color);
  }

  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    color: #fff;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    color: var(--text-muted);
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
    text-wrap: pretty;
  }

  .print {
    display: none !important;
  }

  @media print {
    .no-print {
      display: none !important;
    }

    .print {
      display: block !important;
    }

    astro-dev-toolbar {
      display: none !important;
    }

    article {
      break-inside: avoid;
    }
  }
</style>
