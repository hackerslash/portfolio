---
import { basics } from "@cv"

interface Props {
  title: string
}

const { title } = Astro.props

const { image, summary, url } = basics
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={summary} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href={image} />

    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={summary} />
    <meta property="og:image" content="" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content={url.split("//")[1] ?? ''} />
    <meta property="twitter:url" content={url} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={summary} />
    <meta name="twitter:image" content="" />
  </head>
  <body>
    <div id="theme-reveal" class="no-print"></div>
    <slot />
    <script is:inline>
      const root = document.documentElement;
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme === 'light') {
        root.classList.add('light');
      }
    </script>
  </body>
</html>

<style is:global>
  /* Ensure content is above any background effects but maintains transparency */
  main, section, article, nav, footer {
    position: relative;
    z-index: 10;
  }
  :root {
    --bg-color: #050505;
    --text-color: #e5e5e5;
    --text-muted: #a3a3a3;
    --accent-color: #019b59;
    --card-bg: rgba(255, 255, 255, 0.03);
    --card-border: rgba(255, 255, 255, 0.08);
    --glass-bg: rgba(10, 10, 10, 0.6);
    --glass-border: rgba(255, 255, 255, 0.1);
  }

  :root.light {
    --bg-color: #f8fafc;
    --text-color: #0f172a;
    --text-muted: #475569;
    --accent-color: #059669;
    --card-bg: rgba(0, 0, 0, 0.02);
    --card-border: rgba(0, 0, 0, 0.08);
    --glass-bg: rgba(255, 255, 255, 0.7);
    --glass-border: rgba(0, 0, 0, 0.1);
  }

  :root.light h1, :root.light h2, :root.light h3, :root.light h4, :root.light h3 a {
    color: #0f172a !important;
  }

  :root.light body {
    background-image: 
      radial-gradient(circle at 50% 0%, rgba(5, 150, 105, 0.1), transparent 70%),
      radial-gradient(circle at 100% 0%, rgba(5, 150, 105, 0.05), transparent 50%);
  }

  #theme-reveal {
    display: none;
  }

  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation: none;
    mix-blend-mode: normal;
  }

  ::view-transition-old(root) {
    z-index: 1;
  }

  ::view-transition-new(root) {
    z-index: 9999;
    clip-path: circle(0% at var(--reveal-x, 50%) var(--reveal-y, 50%));
    animation: reveal-out 1.2s cubic-bezier(0.65, 0, 0.35, 1) forwards;
  }

  @keyframes reveal-out {
    from { clip-path: circle(0% at var(--reveal-x, 50%) var(--reveal-y, 50%)); }
    to { clip-path: circle(150% at var(--reveal-x, 50%) var(--reveal-y, 50%)); }
  }

  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
    background: var(--bg-color);
    color: var(--text-color);
    letter-spacing: -0.025rem;
    scrollbar-gutter: stable;
  }

  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    background-image: 
      radial-gradient(circle at 50% 0%, rgba(1, 155, 89, 0.2), transparent 70%),
      radial-gradient(circle at 100% 0%, rgba(1, 155, 89, 0.1), transparent 50%),
      radial-gradient(circle at 0% 0%, rgba(1, 155, 89, 0.05), transparent 40%);
    background-attachment: fixed;
    background-color: var(--bg-color);
  }

  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    color: #fff;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    color: var(--text-muted);
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
    text-wrap: pretty;
  }

  .print {
    display: none !important;
  }

  @media print {
    .no-print {
      display: none !important;
    }

    .print {
      display: block !important;
    }

    astro-dev-toolbar {
      display: none !important;
    }

    article {
      break-inside: avoid;
    }
  }
</style>
